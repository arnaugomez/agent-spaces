{
  "name": "@agent-spaces/server",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "build": "bun build ./src/index.ts --outdir ./dist --target bun",
    "start": "bun run dist/index.js",
    "test": "bun test",
    "test:unit": "bun test",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@agent-spaces/core": "workspace:*",
    "@agent-spaces/protocol": "workspace:*",
    "@agent-spaces/sandbox": "workspace:*",
    "@agent-spaces/policy": "workspace:*",
    "@agent-spaces/capabilities": "workspace:*",
    "hono": "*",
    "@hono/zod-validator": "*",
    "zod": "*",
    "nanoid": "*",
    "pino": "*"
  },
  "devDependencies": {
    "typescript": "*",
    "bun-types": "*"
  }
}

