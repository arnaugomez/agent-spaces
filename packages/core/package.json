{
  "name": "@agent-spaces/core",
  "version": "0.0.1",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist --target bun && tsc --emitDeclarationOnly",
    "dev": "bun build ./src/index.ts --outdir ./dist --target bun --watch",
    "test": "bun test",
    "test:unit": "bun test",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate"
  },
  "dependencies": {
    "@agent-spaces/protocol": "workspace:*",
    "@agent-spaces/sandbox": "workspace:*",
    "@agent-spaces/policy": "workspace:*",
    "drizzle-orm": "*",
    "nanoid": "*"
  },
  "devDependencies": {
    "typescript": "*",
    "bun-types": "*",
    "drizzle-kit": "*"
  }
}

